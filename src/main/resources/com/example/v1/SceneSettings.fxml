<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="960.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.v1.SettingsSceneController">
   <children>
      <VBox layoutX="417.0" layoutY="212.0" prefHeight="536.0" prefWidth="467.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Default Location:" />
            <ChoiceBox fx:id="locationChoiceBox" prefWidth="150.0">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ChoiceBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Distance Unit:" />
            <ChoiceBox fx:id="distanceChoiceBox" prefWidth="150.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ChoiceBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Temperature Unit:" />
            <ChoiceBox fx:id="tempUnitChoiceBox" prefWidth="150.0">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ChoiceBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Wind Speed Unit:" />
            <ChoiceBox fx:id="windSpeedUnitChoiceBox" prefWidth="150.0">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ChoiceBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Show 3-Day Forecast:" />
            <ChoiceBox fx:id="showForecastChoiceBox" prefWidth="150.0">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ChoiceBox>
            <Button fx:id="buttonSave" mnemonicParsing="false" onAction="#saveSettings" text="Save" />
            <Text fx:id="errorText" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="464.0" />
         </children>
      </VBox>
      <Button layoutX="595.0" layoutY="34.0" mnemonicParsing="false" onAction="#switchToCurrentWeatherScene" text="Return Home" />
   </children>
</AnchorPane>
